@model IEnumerable<DiazPierri_Ezequiel_LPPA_Parcial1.Models.Afiliado>

@{
    ViewBag.Title = "Afiliados de la Obra Social";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Agregar nuevo afiliado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @(Html.DisplayNameFor(model => model.Nombre) + " y " + Html.DisplayNameFor(model => model.Apellido))
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CUIT)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(Html.DisplayFor(modelItem => item.Nombre) + " " + Html.DisplayFor(modelItem => item.Apellido))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CUIT)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
